{% extends 'admin.html.twig' %}

{% block title %}Programme - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-between mb-4">
            <h1>Programme - Liste</h1>
            <div class="">
                <a class="btn btn-primary" href="{{ path('programme_new') }}"><i class="fal fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    {% if programmes|length > 0 %}
                        <table class="table table-bordered align-middle">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Date de début</th>
                                    <th>Date de fin</th>
                                    <th>Événement</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for programme in programmes %}
                                <tr>
                                    <td>{{ programme.id }}</td>
                                    <td>{{ programme.name }}</td>
                                    <td>{{ programme.description|raw }}</td>
                                    <td>{{ programme.dateStart ? programme.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ programme.dateEnd ? programme.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ programme.event }}</td>
                                    <td>
                                        {# <a class="btn btn-outline-success btn-action" href="{{ path('programme_show', {'id': programme.id}) }}"><i class="fal fa-eye fa-fw"></i></a> #}
                                        <a class="btn btn-outline-warning btn-action" href="{{ path('programme_edit', {'id': programme.id}) }}"><i class="fal fa-pen fa-fw"></i></a>
                                        {{ include('dashboard/programme/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-info text-center" role="alert">
                            Pas d'enregistrement pour le moment.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
